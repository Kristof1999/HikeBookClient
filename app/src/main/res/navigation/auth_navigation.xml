<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="hu.kristof.nagy.hikebookclient.view.authentication.StartFragment"
        android:label="@string/start_screen_title"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_registrationFragment"
            app:destination="@id/registrationFragment" />
        <action
            android:id="@+id/action_startFragment_to_myMapActivity"
            app:destination="@id/myMapActivity" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="hu.kristof.nagy.hikebookclient.view.authentication.RegistrationFragment"
        android:label="@string/registration_screen_title"
        tools:layout="@layout/fragment_registration" >
        <action
            android:id="@+id/action_registrationFragment_to_myMapActivity"
            app:destination="@id/myMapActivity" />
    </fragment>
    <activity
        android:id="@+id/myMapActivity"
        android:name="hu.kristof.nagy.hikebookclient.view.mymap.MyMapActivity"
        android:label="activity_my_map"
        tools:layout="@layout/activity_my_map" />
</navigation>